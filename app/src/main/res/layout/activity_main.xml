<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carapp.MainActivity">


    <ImageButton
        android:background="@android:color/transparent"
        android:text="Car"
        app:srcCompat="@mipmap/car"
        android:id="@+id/carButton"
        android:scaleType="centerCrop"
        android:layout_width="240dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="106dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/buttonButton" />

    <ImageButton
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/oil"
        android:id="@+id/oilButton"
        android:scaleType="centerCrop"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:layout_width="270dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView2" />

    <Button
        android:text="Tires"
        android:id="@+id/buttonTire"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_below="@+id/oilButton"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:id="@+id/buttonButton"
        android:layout_height="120dp"
        android:layout_width="180dp"
        android:layout_below="@+id/buttonTire"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:id="@+id/textView"
        android:layout_height="190dp"
        android:layout_width="190dp"
        android:layout_below="@+id/buttonButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <TextView
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>
